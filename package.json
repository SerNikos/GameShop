{
  "name": "gameshop",
  "version": "1.0.0",
  "description": "This is a very simple version of a website corelated with games with simple mechanics",
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@vue/test-utils": "^2.0.0-rc.15",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "vue-jest": "^5.0.0-alpha.10",
    "jest-fetch-mock": "^3.0.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/vue/testing"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "setupFiles": [
      "jest-fetch-mock"
    ]
  }
}