{
  "name": "gameshop",
  "version": "1.0.0",
  "description": "This is a very simple version of a website corelated with games with simple mechanics",
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@vue/test-utils": "^2.0.0-rc.15",
    "babel-jest": "^27.5.0",
    "jest": "^29.5.0",
    "vue-jest": "^5.0.0-alpha.13"
  },
  "jest": {
    "roots": ["<rootDir>/tests/unit"],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  }
}
